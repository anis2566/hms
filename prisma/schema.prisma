generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  User
  Doctor
  Admin
}

model User {
  id String @id @default(uuid())
  clerkId String @unique
  name String
  email String
  imageUrl String
  role Role @default(User)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([id, clerkId])
}